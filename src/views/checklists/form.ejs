<%- include('../layouts/header', {title: 'Nova Tarefa'}) %>

<form method="post" action="<%= url %>" >
    <div class="field">
      <label class="label">Nome</label>
      <div class="control">
        <input class="input" type="text" name="checklists[name]" placeholder="Lista de Tarefas" value="<%= checklists.name %>">
        <% if (checklists.error && checklists.error.hasOwnProperty('name')) { %>
          <p class="is-danger help"><%= checklists.error.name.message %></p>
        <% } %>
      </div>
    </div>

    <button type="submit" class="button is-success">Salvar</button>
    <a href="/checklists" class="button">Cancelar</a>
</form>
<%- include('../layouts/footer') %>